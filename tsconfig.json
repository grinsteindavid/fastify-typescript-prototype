{
    "compilerOptions": {
        "target": "ESNext",
        "sourceMap": true,
        "pretty": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "declaration": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts",
        "tests/**/*.spec.ts"
    ]
}